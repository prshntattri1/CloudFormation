{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Parent Stack",
    "Parameters": {
      "VpcId": {
        "Description": "Choose a VPC",
        "Type": "AWS::EC2::VPC::Id"
      },
      "SubnetIds": {
        "Description": "Subnet List",
        "Type":"List<AWS::EC2::Subnet::Id>"
      },
      "KeyName": {
        "Description": "Choose a key pair to associate with the EC2 instances for SSH access",
        "Type": "AWS::EC2::KeyPair::KeyName"
      },
      "AZs": {
        "Description": "Choose AZs for ASG(atleast two)",
        "Type": "List<AWS::EC2::AvailabilityZone::Name>"
      }
    },
    "Resources": {
      "ALBStack": {
        "Type": "AWS::CloudFormation::Stack",
        "Properties": {
          "Parameters": {
            "VpcId": {"Ref": "VpcId"},
            "SubnetIds": {"Fn::Join" : [",", { "Ref": "SubnetIds" } ]}
          },
          "TemplateURL": "s3_URL/child_alb.json"
        }
      },
      "ASGStackRecreated": {
        "DependsOn": "ALBStack",
        "Type": "AWS::CloudFormation::Stack",
        "Properties": {
          "Parameters": {
            "VpcId": {"Ref": "VpcId"},
            "KeyName": { "Ref": "KeyName" },
            "AZs": {"Fn::Join" : [",", { "Ref": "AZs" } ]},
            "TargetGroupARN": { "Fn::GetAtt": ["ALBStack", "Outputs.5277268871ALBTGARN"]}
          },
          "TemplateURL": "S3_URL/child_asg.json"
        }
      }
    },
    "Outputs":{
      "ALBTGARN": {
          "Description": "ALBTG  ARN",
          "Value": { "Fn::GetAtt": ["ALBStack", "Outputs.5277268871ALBTGARN"]}
      },
      "ASGName": {
          "Description": "ASG Name",
          "Value": { "Fn::GetAtt": ["ASGStackRecreated", "Outputs.5277268871ASGName"]}
      }
    }
}
